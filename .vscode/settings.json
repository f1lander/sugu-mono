{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "tslint.enable": false,
    "eslint.enable": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
    },
    "eslint.workingDirectories": [{ "pattern": "./packages/*/" }],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ]
}